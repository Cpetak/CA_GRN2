#!/bin/sh

#Specify a partition
#SBATCH --partition=short
# Request nodes
#SBATCH --nodes=1
# Request some processor cores
#SBATCH --ntasks=1
# Request 3 cores per task
#SBATCH --cpus-per-task=8
# Request memory
#SBATCH --mem=40G
# Run for five minutes
#SBATCH --time=03:00:00
# Name job
#SBATCH --job-name=SbatchJob
# Name output file
#SBATCH --output=%x_%j.out
#SBATCH --array=1-2

# change to the directory where you submitted this script
cd ${SLURM_SUBMIT_DIR}

# Executable section: echoing some Slurm data
echo "Starting sbatch script myscript.sh at:`date`"

cd /users/c/p/cpetak/CA_GRN2

#conda activate ca_grn
echo "task id: $SLURM_ARRAY_TASK_ID"
echo "rule: $2"
echo "rule: $3"
echo "seed: $4"
echo "seed: $5"

if [ $1 == "one" ]; then

  python main.py --job_array_id ${SLURM_ARRAY_TASK_ID} --rules $2 --seed_ints $3 --num_generations 3000

elif [ $1 == "two" ]; then

  echo "we are in two envs"
  python main.py --job_array_id ${SLURM_ARRAY_TASK_ID} --rules $2 $3 --seed_ints $4 $5 --num_generations 100

else

  echo "specify number of alternative environments"

fi
